{
  "name": "@boranseckin/chord",
  "version": "1.2.1",
  "description": "An implementation of Chord network using TypeScript",
  "main": "dist/node.js",
  "author": "Boran Seckin <me@boranseckin.com>",
  "license": "MIT",
  "homepage": "https://github.com/boranseckin/chord#readme",
  "repository": "github:boranseckin/chord",
  "bin": {
    "chord": "dist/index.js"
  },
  "keywords": [
    "scalable",
    "p2p",
    "chord",
    "network",
    "lookup-service"
  ],
  "scripts": {
    "lint": "eslint . --ext .ts",
    "start": "node dist/index.js",
    "start:dev": "node --inspect=5858 -r ts-node/register ./src/index.ts",
    "start:watch": "nodemon",
    "build": "tsc",
    "pretest": "npm run lint; npm run build",
    "test": "jest",
    "prepublishOnly": "npm run build",
    "refresh": "rm -rf ./node_modules ./package-lock.json && npm install",
    "docs": "typedoc -out docs ./src"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules",
      "docs"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm run start:dev",
    "ext": "ts"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "^14.11.8",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "codecov": "^3.8.2",
    "eslint": "^7.11.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-airbnb-typescript": "^11.0.0",
    "eslint-plugin-import": "^2.22.1",
    "jest": "^26.6.3",
    "nodemon": "^2.0.4",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  }
}
